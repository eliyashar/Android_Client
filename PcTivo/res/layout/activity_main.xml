<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView 
        android:id="@+id/buttonPressedText"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:textSize="36sp"
        android:textColor="#0000FF"
        android:text="Test"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/control2"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/prevButton"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:clickable="true"
            android:src="@drawable/prev"
            android:tag="prev" />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:clickable="true"
            android:src="@drawable/play"
            android:tag="play" />

        <ImageView
            android:id="@+id/stopButton"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:clickable="true"
            android:src="@drawable/stop"
            android:tag="stop" />

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:clickable="true"
            android:src="@drawable/next"
            android:tag="next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control2"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/volumeDownButton"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:clickable="true"
            android:src="@drawable/volume_down"
            android:tag="volumeDownButton" />

        <ImageView
            android:id="@+id/volumeUpButton"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:clickable="true"
            android:src="@drawable/volume_up"
            android:tag="volumeUpButton" />
    </LinearLayout>

</RelativeLayout>